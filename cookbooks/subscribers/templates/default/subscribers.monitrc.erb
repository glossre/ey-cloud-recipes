# subscriber worker
check process <%= @app_name %>_subscribers
  with pidfile /data/<%= @app_name %>/shared/pids/subscribers.pid
  start program = "cd /data/<%= @app_name %>/current ; bundle exec rake subscribers:start" with timeout 90 seconds
  stop program = "cd /data/<%= @app_name %>/current ; bundle exec rake subscribers:stop" with timeout 90 seconds
  if totalmem is greater than <%= @memory_limit %> MB for 3 cycles then restart 
  group <%= @app_name %>_subscribers
